    "precommit": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,mts,cts,tsx}": [
      "prettier --write",
      "eslint --max-warnings 0",
      "vitest related"
    ],
    "src/**/*.{js,mjs,cjs,jsx}": [
      "prettier --write",
      "eslint --max-warnings 0"
    ],
    "src/**/*.{json,css}": [
      "prettier --write"
    ]
  },
