    "d3-scale": "^4.0.2",
    "d3-scale-chromatic": "^3.1.0",
    "d3-shape": "^3.2.0",
    "luxon": "^3.7.2",
    "mathjs": "^15.1.0",
    "minimatch": "^10.1.1",
    "minimist": "^1.2.8",
    "numeral": "^2.0.6",
    "prosemirror-markdown": "^1.13.2",
    "prosemirror-model": "^1.25.4",
