{
  "private": true,
  "type": "module",
  "author": "SSen",
  "repository": "https://github.com/iamssen/exocortex-app",
  "scripts": {
    "type-check": "tsc --watch --noEmit",
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "format": "prettier --write \"**/*.{js,jsx,mjs,cjs,ts,tsx,mts,cts}\"",
